<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ads Management - TempMail Admin</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h2><i class="fas fa-envelope"></i> TempMail</h2>
        </div>
        <nav class="sidebar-menu">
            <a href="/dashboard" class="menu-item">
                <i class="fas fa-tachometer-alt"></i> Dashboard
            </a>
            <a href="/domains" class="menu-item">
                <i class="fas fa-globe"></i> Manage Domains
            </a>
            <a href="/api-management" class="menu-item">
                <i class="fas fa-key"></i> API Management
            </a>
            <a href="/ads-management" class="menu-item active">
                <i class="fas fa-ad"></i> Ads Management
            </a>
            <a href="/app-updates" class="menu-item">
                <i class="fas fa-mobile-alt"></i> App Updates
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <header class="header">
            <h1><i class="fas fa-ad"></i> Ads Management</h1>
            <a href="/logout" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </header>

        <div class="content">
            <!-- Alerts -->
            <% if (success) { %>
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i> <%= success %>
                </div>
            <% } %>
            
            <% if (error) { %>
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i> <%= error %>
                </div>
            <% } %>

            <!-- Update Ad Settings -->
            <div class="card">
                <h3><i class="fas fa-edit"></i> Update Ad Settings</h3>
                <form method="POST" action="/ads-management/update">
                    <div class="form-group">
                        <label for="adType">Ad Type</label>
                        <select id="adType" name="adType" class="form-control" required>
                            <option value="">Select Ad Type</option>
                            <option value="banner">Banner Ad</option>
                            <option value="interstitial">Interstitial Ad</option>
                            <option value="rewarded">Rewarded Ad</option>
                            <option value="native">Native Ad</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="adId">Ad ID</label>
                        <input type="text" id="adId" name="adId" class="form-control" 
                               placeholder="Enter Ad ID (e.g., ca-app-pub-1234567890123456/1234567890)" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="platform">Platform</label>
                        <select id="platform" name="platform" class="form-control" required>
                            <option value="">Select Platform</option>
                            <option value="android">Android</option>
                            <option value="ios">iOS</option>
                            <option value="both">Both</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input type="text" id="description" name="description" class="form-control" 
                               placeholder="Brief description of this ad">
                    </div>
                    
                    <div class="form-group">
                        <label>
                            <input type="checkbox" name="isActive" value="true"> Active
                        </label>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Update Ad Settings
                    </button>
                </form>
            </div>

            <!-- Current Ad Configurations -->
            <div class="card">
                <h3><i class="fas fa-list"></i> Current Ad Configurations</h3>
                <% if (adsConfig && adsConfig.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Ad Type</th>
                                    <th>Ad ID</th>
                                    <th>Platform</th>
                                    <th>Status</th>
                                    <th>Description</th>
                                    <th>Updated</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% adsConfig.forEach(ad => { %>
                                    <tr>
                                        <td><span class="badge badge-info"><%= ad.adType %></span></td>
                                        <td><code><%= ad.adId %></code></td>
                                        <td><%= ad.platform %></td>
                                        <td>
                                            <% if (ad.isActive) { %>
                                                <span class="badge badge-success">Active</span>
                                            <% } else { %>
                                                <span class="badge badge-danger">Inactive</span>
                                            <% } %>
                                        </td>
                                        <td><%= ad.description || 'No description' %></td>
                                        <td><%= new Date(ad.updatedAt).toLocaleDateString() %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p style="color: #ccc; text-align: center; padding: 20px;">
                        No ad configurations found. Add your first ad configuration above.
                    </p>
                <% } %>
            </div>

            <!-- API Information -->
            <div class="card">
                <h3><i class="fas fa-code"></i> API Endpoint for Flutter App</h3>
                <p style="color: #ccc; margin-bottom: 15px;">
                    Your Flutter app can fetch ad configurations using this endpoint:
                </p>
                <div style="background: #0f0f0f; padding: 15px; border-radius: 5px; border-left: 3px solid #00ff88;">
                    <strong style="color: #00ff88;">GET</strong>
                    <code style="color: #fff; margin-left: 10px;">http://localhost:3000/api/ads-config?platform=android</code>
                </div>
                <p style="color: #666; margin-top: 10px; font-size: 14px;">
                    Replace 'android' with 'ios' or 'both' to get platform-specific configurations.
                </p>
            </div>
        </div>
    </div>
</body>
</html>