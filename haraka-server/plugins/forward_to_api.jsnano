const http = require('http');
const { PassThrough } = require('stream');

exports.hook_data_post = function (next, connection) {
  const txn = connection.transaction;
  if (!txn || !txn.message_stream) {
    connection.logerror(this, 'âŒ No message stream.');
    return next();
  }

  const chunks = [];
  const pass = new PassThrough();

  pass.on('data', chunk => {
    if (chunk) chunks.push(chunk);
  });

  pass.on('end', () => {
    const raw = Buffer.concat(chunks);
    const recipient = txn.rcpt_to?.[0]?.address()?.toLowerCase() || 'unknown@domain.com';

    connection.loginfo(this, `ğŸ“¨ Raw mail received for: ${recipient}`);

    const options = {
      hostname: '127.0.0.1',
      port: 3000,
      path: `/incoming/raw?to=${encodeURIComponent(recipient)}`,
      method: 'POST',
      headers: {
        'Content-Type': 'application/octet-stream',
        'Content-Length': raw.length
      }
    };

    const req = http.request(options, res => {
      connection.loginfo(this, `âœ… Forwarded to API: ${res.statusCode}`);
    });

    req.on('error', err => {
      connection.logerror(this, `âŒ API Error: ${err.message}`);
    });

    req.write(raw);
    req.end();

    next();
  });

  txn.message_stream.pipe(pass);
};
